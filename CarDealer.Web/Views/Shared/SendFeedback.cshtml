@model CarDealer.Web.Models.FeedbackViewModel
@{var supportOnline = (CarDealer.Web.Models.SupportOnlineViewModel)ViewBag.SupportOnline;}

<div class="row">
    <div class="col-sm-6 col-md-12">
        <div class="banner2-wrapper">
            <div class="contact-banner">

                <div class="txt3">Đại diện kinh doanh</div>
                <div><img src="@supportOnline.Image" class="img-responsive" /></div>
                <div class="txt4" style="text-align:center">@supportOnline.Name</div>
                <div class="txt5">
                    @supportOnline.Address <br />
                    Điện thoại: <a href="tel:#" style="font-weight:bold">@supportOnline.Mobile</a>
                    <br />
                </div>
                <div class="form-wrapper">
                    <div id="note2"></div>
                    <div id="fields2">    
                        <form id="ajax-contact-form2" class="form-horizontal rd-mailform" method="post">
                            <div class="form-group form-wrap">
                                <label for="inputEmail">Họ tên</label><input type="text" class="form-control" id="inputName" name="name" placeholder="Họ tên quý khách">
                            </div>
                            <div class="form-group form-wrap">
                                <label for="inputEmail">Email</label><input type="text" class="form-control" id="inputEmail" name="email" placeholder="Địa chỉ email">
                            </div>
                            <div class="form-group form-wrap">
                                <label>Số điện thoại</label><input type="text" class="form-control" id="inputMobile" name="mobile" placeholder="Số điện thoại">
                            </div>
                            <div class="form-group form-wrap">
                                <label for="inputMessage">Thông điệp</label>
                                <textarea class="form-control" rows="9" id="inputMessage" placeholder="Lời nhắn(Ghi rõ: đăng ký lái thử hoặc liên hệ về xe)" name="content"></textarea>
                            </div>

                            @*<div class="checkbox-inline">
                                    <label>
                                        <input type="checkbox"> Gửi cho tôi một bản sao
                                    </label>
                                </div>*@

                            @*<div class="checkbox-inline">
                                    <label>
                                        <input type="checkbox" checked> Đăng ký nhận tin khuyến mãi
                                    </label>
                                </div>*@

                            <button type="button" id="sendfeedback" class="btn-default btn-cf-submit2">Gửi</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

