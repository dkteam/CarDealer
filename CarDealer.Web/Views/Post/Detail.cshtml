@model CarDealer.Web.Models.PostViewModel

@{
    var relatedCars = (IEnumerable<CarDealer.Web.Models.PostViewModel>)ViewBag.RelatedPosts;
    var category = (CarDealer.Web.Models.PostCategoryViewModel)ViewBag.Category;

    ViewBag.Title = "phamtan-mercedes.com - " + Model.Name;
    ViewBag.Metakeyword = Model.MetaKeyword;
    ViewBag.MetaDescription = Model.MetaDescription;

    Layout = "~/Views/Shared/Layouts.cshtml";
}
<div class="section">
    <div class="breadcrumbs1_wrapper novi-background">
        <div class="container">
            <div class="breadcrumbs1"><a href="/">Trang chủ</a><span></span>@category.Name</div>
        </div>
    </div>
    <div class="section-md-bottom content novi-background bg-cover">
        <div class="container">
            <div class="row row-fix">
                <div class="col-sm-12 col-md-9  column-content">
                    <div class="title2" style="text-align:center">@Model.Name</div>
                    <p style="text-align:justify; font-weight: bold; font-style:italic">@Model.Description</p>
                    <p style="text-align:justify">@Html.Raw(Model.Content)</p>
                    <span class="pull-left">Đăng ngày: @Model.CreatedDate</span>

                    <div class="row row-fix">
                        <div class="col-sm-12 col-md-9  col-md-push-3 column-content">
                            <div class="footer-menu pull-right">
                                <ul class="footer-menu-list">
                                    <li><h5>Tags: </h5></li>
                                    @foreach (var tag in (IEnumerable<CarDealer.Web.Models.TagViewModel>)ViewBag.Tags)
                                    {
                                    <li><a href="/tag-bai-viet/@(tag.ID).html">@tag.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
